<tal:block condition="view/available"
           i18n:domain="ploneboard">
<dl class="portlet portletPloneboardRecent">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/title">Recent conversations</span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:items tal:repeat="item view/results"
				tal:condition="view/results">
        <dd class="portletItem"
            tal:define="oddrow repeat/item/odd"
            tal:attributes="class python:oddrow and  'portletItem odd' or 'portletItem even'">
            <div>
            	<span tal:content="string:${repeat/item/number}. ">1</span>
            	<a href="" tal:attributes="href python:view.getSearchUrl(item[0])">
                <span tal:content="python:view.getUserName(item[0])+' (%d)'%item[1]"/>
				</a>
            </div>
        </dd>
    </tal:items>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</tal:block>

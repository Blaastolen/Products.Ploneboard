<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ploneboard">

<head>
    <metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
           tal:content="string: @import url($portal_url/ploneboard.css);"></style>
    </metal:css>
</head>
      
<body>

    <div metal:fill-slot="main">

        <metal:header use-macro="here/board_header/macros/header">Board header</metal:header>

        <div class="documentDescription"
             tal:content="here/Description"> 
           description
        </div>
        
        <div class="boardForumListing boardForumIndex">

            <tal:showforums tal:define="forums here/getForums"
                            tal:repeat="forum forums">

                <div class="boardForumEntry">
                    <div class="visualForumEntry">      
                        <a href=""
                           tal:attributes="href forum/absolute_url">
                            <span>

                                <span tal:replace="forum/Title">This is a title</span>

                                <strong>(<span tal:replace="forum/Description">This is the Board Description</span>)</strong>

                                <em>
                                    by <span tal:replace="forum/Creator">This is a title</span>
                                    -
                                    <span tal:replace="forum/getNumberOfConversations" /> conversations, 
                                    <span tal:replace="forum/getNumberOfMessages" /> messages.
                                </em>
                            </span>
                        </a>

                    </div>

                    <!-- 
                        This should show "Thursday 13:56" if in this week, "Aug 13. 2003" 
                        if older than this week. (limi)
                    -->
                    <div class="boardLastPost">
                        <span tal:replace="python:here.toPloneboardTime(forum.getLastMessageDate())">
                            Thursday 13:21
                        </span>
                        <em>
                            by <span tal:replace="forum/getLastMessageAuthor">last author</span>
                        </em>
                    </div>

                </div>

            </tal:showforums>

            <div class="visualClear"></div>

        </div>            
    
    </div>
                     
</body>
</html>

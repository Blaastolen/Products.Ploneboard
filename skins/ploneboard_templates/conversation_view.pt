<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ploneboard">
      
<head>
    <metal:css fill-slot="css_slot">
        <style type="text/css" media="all"
               tal:content="string: @import url($portal_url/ploneboard.css);"></style>
    </metal:css>

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />

</head>

<body>

    <div metal:fill-slot="main" tal:define="noreply python: 0">

        <metal:header use-macro="here/board_header/macros/header">Board header</metal:header>

        <h2 tal:content="here/Title">Conversation title</h2>

        <div class="visualClear"></div>	

        <div class="boardConversation"
             metal:define-macro="view_messages"
             tal:define="messages here/getMessages">	

            <div class="boardMessage" tal:repeat="message messages">

                <div class="boardMessageDetails">
                <img src="" 
                     tal:attributes="src string:${portal_url}/ploneboard_message_icon.gif"/>
                     Posted by 
                     <span tal:replace="message/Creator">author</span> 
                     at
                     <span tal:replace="python:here.toPloneboardTime(message.creation_date)">Thursday 13:21</span>
                </div>
            
                <div class="boardMessageBody">
            
                    <div class="portrait" 
                          tal:define="home python:container.portal_membership.getHomeUrl(message.Creator(), verifyPermission=1);
                                      portrait python: here.portal_membership.getPersonalPortrait(message.Creator());"> 
                        <a href="#" tal:attributes="href home">                    
                            <img src="defaultUser.gif" 
                                 alt="" 
                                 border="0" 
                                 width="75" 
                                 height="100" 
                                 tal:attributes="src portrait/absolute_url" />
                            <div tal:content="message/Creator">member id</div>
                        </a>
                    </div>
                    
                    <div class="boardMessageContent" tal:content="structure message/getBody">Jeg mener mye rart.</div>
                    
                </div>
                
                <div class="visualClear"></div>

                <div class="boardMessageActions" tal:condition="not: python: noreply == 1">
                
                    <form tal:attributes="action string:${message/absolute_url}/portal_form/add_message_form">
                        <input class="standalone"
                               type="submit" 
                               value="Reply to this" />
                    </form>

                </div>

            </div>
        </div>
        <div class="visualClear"></div>	
    </div>
                     
</body>
</html>
